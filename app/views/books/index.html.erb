<h1>Books</h1>

<% @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>
  
   <p>Body</p>
  <span><%= book.title %></span>
  
<% end %>

<h1>New book</h1>
<%= form_with model:@book do |f| %>
  <h4>title</h4>
  <%= f.text_field:title %>
  
  <h4>body</h4>
  <%= f.text_area:body %>
  
  <%= f.submit 'Create book' %>
 <% end %>
